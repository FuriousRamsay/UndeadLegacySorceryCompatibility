	<grid depth="1" name="inventory" pos="264,-51" rows="1" cols="3" cell_width="90" cell_height="90" controller="WorkstationToolGrid" repeat_content="true" allow_sort_order="false" 
        required_tools="toolFireCore,toolIceCore,toolLightningCore" required_tools_only="true">
		<required_item_stack name="0"/>
	</grid>

	<panel name="content" depth="1" pos="20,-40" size="550,530" on_scroll="true" disableautobackground="true">
		<rect pos="-62,-62">
