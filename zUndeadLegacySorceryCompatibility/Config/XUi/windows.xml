				<ulmCategory/>
			</grid>
		</rect>

		<ulmSearch pos="338,48"/>
		<ulmPaging pos="200,-475"/>

		<grid depth="2" name="recipes" pos="4,-105" rows="4" cols="6" size="390,552" cell_width="90" cell_height="90" controller="RecipeList" repeat_content="true" arrangement="horizontal" >
			<recipe_entry name="0"/>
		</grid>
	</panel>
</window>

