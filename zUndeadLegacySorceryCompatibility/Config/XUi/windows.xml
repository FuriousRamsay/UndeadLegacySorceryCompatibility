<Config>
<append xpath="/windows">

<window name="windowCraftingForgeFire" depth="1" size="0,0" panel="Left" controller="WorkstationMaterialInputWindow" 
	materials_accepted="ice" 
	valid_materials_color="[green]" invalid_materials_color="[red]">
	<sprite style="ulmCraftingListDefault"/>
	<texture style="ulmCraftingListForge"/>
	<panel style="ulmHeader">
		<sprite style="ulmHeader" sprite="symbol_anvil"/>
		<label style="ulmHeader" text_key="fireforge"/>
	</panel>
	<grid depth="1" name="inventory" pos="264,-51" rows="1" cols="2" cell_width="90" cell_height="90" controller="WorkstationToolGrid" repeat_content="true" allow_sort_order="false"
        required_tools="toolFireCore,toolHammerFire" required_tools_only="true">
		<required_item_stack name="0"/>
	</grid>
    <rect pos="0,-145">
	    <grid depth="2" pos="54,-34" rows="1" cols="2" cell_width="90" cell_height="90" controller="WorkstationMaterialInputGrid" repeat_content="true">
		    <ulmStack90 name="0"/>
	    </grid>
	    <grid depth="1" pos="54,-34" name="slot_preview" rows="1" cols="2" cell_width="90" cell_height="90" controller="SlotPreview" repeat_content="true">
		    <rect><sprite name="slot" pos="16,-16" size="60,60" sprite="ui_game_symbol_misc_crafting" color="255,255,255,128"/></rect>
	    </grid>
        <sprite depth="1" pos="235,-47" size="32,64" sprite="symbol_smelt_to" color="255,255,255,64"/>
	    <grid depth="2" pos="266,-35" rows="3" cols="2" cell_width="136" cell_height="30" repeat_content="false">
		    <forge_material name="fire"	    icon="resourceEssenceFire"/>
	    </grid>
    </rect>
</window>

