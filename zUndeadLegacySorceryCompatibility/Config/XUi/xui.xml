<Config>

<append xpath="//ruleset[@name='default']">

	<window_group name="FuriousRamsayConjureFire" controller="XUiC_WorkstationWindowGroup" open_backpack_on_open="true" close_compass_on_open="true">
		<window name="headerEmpty"/>
		<window name="windowCraftingFurnaceFire"/>
		<window name="windowCraftingFuel"/>
		<window name="windowCraftingListWithFuel"/>
		<window name="windowCraftingInfo"/>
		<window name="windowCraftingQueue"/>
		<window name="windowCraftingOutput"/>
	</window_group>

	<window_group name="FuriousRamsayConjureIce" controller="XUiC_WorkstationWindowGroup" open_backpack_on_open="true" close_compass_on_open="true">
		<window name="headerEmpty"/>
		<window name="windowCraftingFurnaceIce"/>
		<window name="windowCraftingFuel"/>
		<window name="windowCraftingListWithFuel"/>
		<window name="windowCraftingInfo"/>
		<window name="windowCraftingQueue"/>
		<window name="windowCraftingOutput"/>
	</window_group>

	<window_group name="FuriousRamsayConjureLightning" controller="XUiC_WorkstationWindowGroup" open_backpack_on_open="true" close_compass_on_open="true">
		<window name="headerEmpty"/>
		<window name="windowCraftingFurnaceLightning"/>
		<window name="windowCraftingFuel"/>
		<window name="windowCraftingListWithFuel"/>
		<window name="windowCraftingInfo"/>
		<window name="windowCraftingQueue"/>
		<window name="windowCraftingOutput"/>
	</window_group>

</append>

<set xpath="//window_group[@name='workstation_sorceryDesk' or @name='workstation_sorceryAlchemyStation' or @name ='workstation_sorceryArcaneWheel']">
	<window name="headerEmpty"/>
    <window name="windowCraftingSorceryCores"/>
	<window name="windowCraftingInfo"/>
	<window name="windowCraftingQueue"/>
	<window name="windowCraftingOutput"/>
</set>		

<set xpath="//window_group[@name='workstation_sorceryEnchantingStation']">
	<window name="headerEmpty"/>
    <window name="windowCraftingSorceryHammers"/>
	<window name="windowCraftingInfo"/>
	<window name="windowCraftingQueue"/>
	<window name="windowCraftingOutput"/>
</set>		

</Config>